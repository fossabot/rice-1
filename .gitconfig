[user]
	email = xondev@vivaldi.net
	name = Maksym Movchan
	username = xon
	signingkey = xondev@vivaldi.net

[core]
	editor = nvim
	excludesfile = ~/.gitignore

[color]
	ui = true

[color "branch"]
    current = yellow bold
    local = cyan bold
    remote = green bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[diff]
  tool = vimdiff

[github]
  user = xon-dev
  token = token

[url "https://github.com/"]
    insteadOf = gh:

[url "https://gist.github.com/"]
    insteadOf = gist:

[url "https://bitbucket.org/"]
    insteadOf = bb:
[tig]
    line-graphics = utf-8
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[committer]
	name = Maksym Movchan
